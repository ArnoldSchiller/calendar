// Im EventManager.ts innerhalb von connect...

// Holen wir uns die Komponente vom Server, falls sie existiert
client.get_object(ev.id, null, (_obj, getRes) => {
    let icalComp;
    try {
        // Versuche das Original zu laden
        const [success, existingComp] = client.get_object_finish(getRes);
        icalComp = existingComp;
        
        // JETZT: Nur die Felder 체berschreiben, die wir im Formular haben
        icalComp.set_summary(ev.summary);
        if (ev.description !== undefined) icalComp.set_description(ev.description);

        // ZEIT-LOGIK: Nur anfassen, wenn wir sicher sind!
        // Wenn es ein FullDay-Termin war und bleibt, 채ndern wir nur die Tage
        // Wenn es ein Zeit-Termin war, 채ndern wir nur die Zeiten, lassen aber 
        // evtl. vorhandene Zeitzonen-Anh채nge im Original-Objekt unangetastet.
        
        // Hier setzen wir deine neuen Werte ein (wie zuvor besprochen)
        icalComp.set_dtstart(start);
        icalComp.set_dtend(end);

        // Update abschicken
        client.modify_object(icalComp, ECal.ObjModType.THIS, 0, null, ...);

    } catch (e) {
        // Falls das Objekt nicht gefunden wurde (was bei Add der Fall ist)
        // erstellen wir ein neues (dein bisheriger Code)
    }
});
